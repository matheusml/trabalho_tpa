<div class="container span4">
  <div class="well" align="center">
    <h2>Cadastro</h2>

    <%= form_for @user do |f| %>
      <% if @user.errors.any? %>
        <div class="error_messages">
          <h2>Formulário inválido</h2>
          <ul>
            <% for message in @user.errors.full_messages %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <p>
        <%= f.label :nome %>
        <%= f.text_field :name %>
      </p>
      <p>
        <%= f.label :senha %>
        <%= f.password_field :password %>
      </p>
      <p>
        <%= f.label :senha_novamente %>
        <%= f.password_field :password_confirmation %>
      </p>
      <p class="button"><%= f.submit "Salvar", :class => 'btn btn-primary' %></p>
    <% end %>
  </div>
</div>